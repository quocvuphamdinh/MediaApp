<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:background="@android:color/transparent"
            android:id="@+id/appBarVideoDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewBackVideoDetail"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <VideoView
            android:layout_centerInParent="true"
            android:backgroundTint="@color/background_video_view"
            android:id="@+id/videoViewVideoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageViewButtonPlay"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_button_play"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    </RelativeLayout>
</layout>