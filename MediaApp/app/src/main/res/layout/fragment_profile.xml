<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/appBarProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewBackProfile"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_arrow_back" />
                <ImageView
                    android:id="@+id/imageViewSettingProfile"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_settings"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewAvatarProfile"
                        android:layout_gravity="center"
                        app:cardCornerRadius="100dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp">
                        <TextView
                            android:id="@+id/textViewInsideAvatarProfile"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
                <TextView
                    android:id="@+id/textViewFullNameProfile"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="19dp"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:text="Fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewUsernameProfile"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="27dp"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="E-mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <TextView
                        android:id="@+id/textViewEmailProfile"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="...."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.button.MaterialButton
                    android:layout_marginEnd="28dp"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:id="@+id/buttonChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_button_gradient"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textViewSignOut"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_gravity="end"
                    android:textColor="@color/primary_color"
                    android:text="@string/dang_xuat"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>