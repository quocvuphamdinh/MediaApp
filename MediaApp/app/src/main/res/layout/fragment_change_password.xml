<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:id="@+id/appBarChangePassword"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_arrow_back" />
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_below="@id/appBarChangePassword"
            android:visibility="visible"
            android:id="@+id/linearCheckpassword"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="26dp"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_gravity="center"
                android:id="@+id/edtCheckPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="350dp"
                android:autoText="false"
                android:background="@drawable/custom_input_text"
                android:backgroundTint="#D7E5E5E5"
                android:elegantTextHeight="false"
                android:ems="10"
                android:hint="******"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
            <com.google.android.material.button.MaterialButton
                android:layout_marginEnd="28dp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:id="@+id/buttonCheckPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_gradient"
                android:text="Check password"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/appBarChangePassword"
            android:visibility="gone"
            android:id="@+id/linearChangepassword"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="26dp"
                android:text="New password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_gravity="center"
                android:id="@+id/edtNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="350dp"
                android:autoText="false"
                android:background="@drawable/custom_input_text"
                android:backgroundTint="#D7E5E5E5"
                android:elegantTextHeight="false"
                android:ems="10"
                android:hint="******"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
            <TextView
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="26dp"
                android:layout_marginTop="10dp"
                android:text="Confirm password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_gravity="center"
                android:id="@+id/edtConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="350dp"
                android:autoText="false"
                android:background="@drawable/custom_input_text"
                android:backgroundTint="#D7E5E5E5"
                android:elegantTextHeight="false"
                android:ems="10"
                android:hint="******"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtFisrtName" />
            <com.google.android.material.button.MaterialButton
                android:layout_marginEnd="28dp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:id="@+id/buttonChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_gradient"
                android:text="Change password"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        </LinearLayout>
    </RelativeLayout>
</layout>